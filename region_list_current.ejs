<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Viloyatlar - Telegram SMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .region-card {
            cursor: pointer;
            transition: all 0.3s;
            border-left: 4px solid #0d6efd;
        }
        .region-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .region-stats {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 15px;
        }
        .stat-badge {
            background: rgba(255,255,255,0.2);
            padding: 5px 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <%- include('../partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2"><i class="bi bi-geo-alt"></i> Viloyatlar bo'yicha Yo'nalishlar</h1>
        </div>

        <div class="row mb-4">
            <% regions.forEach((region, index) => { %>
                <div class="col-md-4 mb-3">
                    <div class="card region-card" onclick="window.location.href='/routes/region/<%= region.id %>'">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-pin-map-fill text-primary"></i>
                                <%= region.name %>
                            </h5>
                            <div class="mt-3">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">E'lonlar:</span>
                                    <span class="badge bg-primary rounded-pill"><%= region.phone_count %> ta</span>
                                </div>
                                <div class="d-flex justify-content-between mt-2">
                                    <span class="text-muted">Tumanlar:</span>
                                    <span class="badge bg-secondary rounded-pill"><%= region.district_count %> ta</span>
                                </div>
                            </div>
                            <div class="mt-3 text-end">
                                <i class="bi bi-arrow-right-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
