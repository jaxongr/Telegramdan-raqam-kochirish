<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>QR Code Login - Akkaunt Qo'shish</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/accounts">
        <i class="bi bi-arrow-left"></i> Akkauntlarga qaytish
      </a>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-qr-code"></i> QR Code bilan Telegram ga kirish</h4>
          </div>
          <div class="card-body text-center">
            <!-- Step 1: Boshlash -->
            <div id="step-start">
              <p class="lead">Telegram akkauntingizni qo'shish uchun QR kodni skan qiling</p>
              <button id="btn-start" class="btn btn-lg btn-primary">
                <i class="bi bi-play-circle"></i> QR Kod Yaratish
              </button>
            </div>

            <!-- Step 2: QR Code ko'rsatish -->
            <div id="step-qr" style="display: none">
              <h5>Telegram mobil ilovasida skan qiling:</h5>
              <p class="text-muted">Settings → Devices → Link Desktop Device</p>

              <div class="my-4">
                <canvas id="qr-canvas"></canvas>
              </div>

              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Kutilmoqda...</span>
              </div>
              <p class="mt-2">Skan qilishni kutmoqda...</p>

              <button id="btn-cancel" class="btn btn-outline-danger mt-3">
                <i class="bi bi-x-circle"></i> Bekor qilish
              </button>
            </div>

            <!-- Step 3: Muvaffaqiyat -->
            <div id="step-success" style="display: none">
              <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i>
                <h5>Muvaffaqiyatli!</h5>
                <p id="success-phone"></p>
              </div>
              <a href="/accounts" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Akkauntlarga qaytish
              </a>
            </div>

            <!-- Step 4: Xato -->
            <div id="step-error" style="display: none">
              <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <h5>Xato yuz berdi</h5>
                <p id="error-message"></p>
              </div>
              <button id="btn-retry" class="btn btn-primary">
                <i class="bi bi-arrow-repeat"></i> Qayta urinish
              </button>
            </div>
          </div>
        </div>

        <!-- Ko'rsatma -->
        <div class="card mt-4">
          <div class="card-header">
            <h5><i class="bi bi-info-circle"></i> Qanday ishlaydi?</h5>
          </div>
          <div class="card-body">
            <ol>
              <li>Yuqoridagi tugmani bosing va QR kod paydo bo'lishini kuting</li>
              <li>Telegram mobil ilovasini oching</li>
              <li><strong>Settings → Devices → Link Desktop Device</strong> ga kiring</li>
              <li>QR kodni skan qiling</li>
              <li>Akkaunt avtomatik qo'shiladi!</li>
            </ol>
            <div class="alert alert-warning">
              <i class="bi bi-shield-exclamation"></i>
              <strong>Muhim:</strong> Akkauntingiz uchun 2FA (ikki faktorli autentifikatsiya) yoqilgan bo'lsa, parol so'ralishi mumkin.
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let loginId = null;
    let checkInterval = null;

    // QR kod yaratishni boshlash
    document.getElementById('btn-start').addEventListener('click', async () => {
      document.getElementById('step-start').style.display = 'none';
      document.getElementById('step-qr').style.display = 'block';

      try {
        const response = await fetch('/accounts/api/start-qr-login', {
          method: 'POST'
        });

        const data = await response.json();

        if (data.success && data.qrCode) {
          loginId = data.loginId;

          // QR kodni chizish
          QRCode.toCanvas(
            document.getElementById('qr-canvas'),
            'tg://login?token=' + data.qrCode,
            { width: 300 },
            (error) => {
              if (error) {
                console.error('QR kod xatosi:', error);
                showError('QR kod yaratishda xato: ' + error.message);
              }
            }
          );

          // Statusni tekshirishni boshlash
          startStatusCheck();

        } else {
          showError(data.error || 'QR kod yaratib bo\'lmadi');
        }

      } catch (error) {
        console.error('Login xatosi:', error);
        showError('Xato: ' + error.message);
      }
    });

    // Statusni tekshirish
    function startStatusCheck() {
      checkInterval = setInterval(async () => {
        if (!loginId) return;

        try {
          const response = await fetch('/accounts/api/login-status/' + loginId);
          const status = await response.json();

          console.log('Status:', status.status);

          if (status.status === 'success') {
            clearInterval(checkInterval);
            showSuccess(status.phone);
          } else if (status.status === 'error') {
            clearInterval(checkInterval);
            showError(status.error || 'Login xatosi');
          }

        } catch (error) {
          console.error('Status tekshirishda xato:', error);
        }
      }, 2000); // Har 2 sekundda
    }

    // Muvaffaqiyat
    function showSuccess(phone) {
      document.getElementById('step-qr').style.display = 'none';
      document.getElementById('step-success').style.display = 'block';
      document.getElementById('success-phone').textContent = 'Akkaunt qo\'shildi: ' + phone;
    }

    // Xato
    function showError(message) {
      document.getElementById('step-start').style.display = 'none';
      document.getElementById('step-qr').style.display = 'none';
      document.getElementById('step-error').style.display = 'block';
      document.getElementById('error-message').textContent = message;
    }

    // Bekor qilish
    document.getElementById('btn-cancel').addEventListener('click', async () => {
      if (loginId) {
        await fetch('/accounts/api/cancel-login/' + loginId, { method: 'POST' });
      }
      clearInterval(checkInterval);
      window.location.href = '/accounts';
    });

    // Qayta urinish
    document.getElementById('btn-retry').addEventListener('click', () => {
      window.location.reload();
    });
  </script>
</body>
</html>
