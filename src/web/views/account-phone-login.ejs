<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Telefon Raqam bilan Kirish</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">ðŸ“± Telegram SMS & Broadcast</a>
      <div>
        <a href="/accounts" class="btn btn-outline-light btn-sm"><i class="bi bi-arrow-left"></i> Orqaga</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5><i class="bi bi-phone"></i> Telegram Akkaunt Qo'shish (Telefon)</h5>
          </div>
          <div class="card-body">
            <div id="step1">
              <h6>1. Telefon raqamni kiriting</h6>
              <form id="phoneForm">
                <div class="mb-3">
                  <label class="form-label">Telefon raqam:</label>
                  <input type="text" class="form-control" id="phone" placeholder="+998901234567" required>
                  <div class="form-text">Masalan: +998901234567</div>
                </div>
                <div class="mb-3">
                  <label class="form-label">API ID:</label>
                  <input type="text" class="form-control" id="apiId" value="<%= apiId %>" required readonly>
                  <div class="form-text">Proyekt .env dan avtomatik</div>
                </div>
                <div class="mb-3">
                  <label class="form-label">API Hash:</label>
                  <input type="text" class="form-control" id="apiHash" value="<%= apiHash %>" required readonly>
                  <div class="form-text">Proyekt .env dan avtomatik</div>
                </div>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-send"></i> Kod Yuborish
                </button>
              </form>
            </div>

            <div id="step2" style="display: none;">
              <h6>2. SMS kodini kiriting</h6>
              <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Telegram'dan kelgan 5 xonali kodni kiriting
              </div>
              <form id="codeForm">
                <div class="mb-3">
                  <label class="form-label">SMS Kod:</label>
                  <input type="text" class="form-control" id="code" placeholder="12345" maxlength="5" required>
                </div>
                <button type="submit" class="btn btn-success">
                  <i class="bi bi-check-circle"></i> Tasdiqlash
                </button>
              </form>
            </div>

            <div id="step3" style="display: none;">
              <h6>3. 2FA Parol (agar bo'lsa)</h6>
              <div class="alert alert-warning">
                <i class="bi bi-shield-lock"></i> 2FA parolingizni kiriting
              </div>
              <form id="passwordForm">
                <div class="mb-3">
                  <label class="form-label">2FA Parol:</label>
                  <input type="password" class="form-control" id="password" required>
                </div>
                <button type="submit" class="btn btn-success">
                  <i class="bi bi-check-circle"></i> Kirish
                </button>
              </form>
            </div>

            <div id="success" style="display: none;">
              <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i>
                <strong>Muvaffaqiyatli!</strong> Akkaunt qo'shildi.
              </div>
              <a href="/accounts" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Akkauntlar sahifasiga qaytish
              </a>
            </div>

            <div id="error" class="alert alert-danger" style="display: none;">
              <i class="bi bi-exclamation-triangle"></i> <span id="errorText"></span>
            </div>

            <div id="loading" style="display: none; text-align: center;">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yuklanmoqda...</span>
              </div>
              <p class="mt-2">Iltimos kuting...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let loginId = null;

    document.getElementById('phoneForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const phone = document.getElementById('phone').value;
      const apiId = document.getElementById('apiId').value;
      const apiHash = document.getElementById('apiHash').value;

      showLoading();

      try {
        const res = await fetch('/accounts/api/phone-login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ phone, apiId, apiHash })
        });

        const data = await res.json();
        hideLoading();

        if (data.success) {
          loginId = data.loginId;
          document.getElementById('step1').style.display = 'none';
          document.getElementById('step2').style.display = 'block';
        } else {
          showError(data.error || 'Xato yuz berdi');
        }
      } catch (err) {
        hideLoading();
        showError('Server bilan bog\'lanishda xato');
      }
    });

    document.getElementById('codeForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const code = document.getElementById('code').value;

      showLoading();

      try {
        const res = await fetch('/accounts/api/phone-code', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ loginId, code })
        });

        const data = await res.json();
        hideLoading();

        if (data.success) {
          if (data.needPassword) {
            document.getElementById('step2').style.display = 'none';
            document.getElementById('step3').style.display = 'block';
          } else {
            showSuccess();
          }
        } else {
          showError(data.error || 'Kod noto\'g\'ri');
        }
      } catch (err) {
        hideLoading();
        showError('Server bilan bog\'lanishda xato');
      }
    });

    document.getElementById('passwordForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const password = document.getElementById('password').value;

      showLoading();

      try {
        const res = await fetch('/accounts/api/phone-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ loginId, password })
        });

        const data = await res.json();
        hideLoading();

        if (data.success) {
          showSuccess();
        } else {
          showError(data.error || 'Parol noto\'g\'ri');
        }
      } catch (err) {
        hideLoading();
        showError('Server bilan bog\'lanishda xato');
      }
    });

    function showLoading() {
      document.getElementById('loading').style.display = 'block';
    }

    function hideLoading() {
      document.getElementById('loading').style.display = 'none';
    }

    function showError(text) {
      document.getElementById('errorText').textContent = text;
      document.getElementById('error').style.display = 'block';
      setTimeout(() => {
        document.getElementById('error').style.display = 'none';
      }, 5000);
    }

    function showSuccess() {
      document.getElementById('step2').style.display = 'none';
      document.getElementById('step3').style.display = 'none';
      document.getElementById('success').style.display = 'block';
    }
  </script>
</body>
</html>
