<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Guruhlar Ro'yxati</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/broadcast">
        <i class="bi bi-arrow-left"></i> Broadcast
      </a>
      <div class="btn-group">
        <a href="/broadcast/groups?filter=all" class="btn btn-sm <%= filter === 'all' ? 'btn-light' : 'btn-outline-light' %>">Hammasi</a>
        <a href="/broadcast/groups?filter=assigned" class="btn btn-sm <%= filter === 'assigned' ? 'btn-light' : 'btn-outline-light' %>">Tayinlangan</a>
        <a href="/broadcast/groups?filter=unassigned" class="btn btn-sm <%= filter === 'unassigned' ? 'btn-light' : 'btn-outline-light' %>">Tayinlanmagan</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="card">
      <div class="card-header">
        <h5><i class="bi bi-chat-dots"></i> Guruhlar (<%= groups.length %>)</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-sm">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nomi</th>
                <th>Username</th>
                <th>Tayinlangan Akkaunt</th>
                <th>Broadcast Soni</th>
                <th>Oxirgi</th>
              </tr>
            </thead>
            <tbody>
              <% groups.forEach(group => { %>
                <tr>
                  <td><small><%= group.telegram_id %></small></td>
                  <td><%= group.title %></td>
                  <td><small>@<%= group.username || '-' %></small></td>
                  <td>
                    <% if (group.assigned_phone) { %>
                      <span class="badge bg-success"><%= group.assigned_phone %></span>
                    <% } else { %>
                      <span class="badge bg-warning">Tayinlanmagan</span>
                    <% } %>
                  </td>
                  <td><%= group.total_broadcasts %></td>
                  <td>
                    <small><%= group.last_broadcast_time ? new Date(group.last_broadcast_time).toLocaleString('uz-UZ') : '-' %></small>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
