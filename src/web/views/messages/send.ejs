<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Guruhga xabar yuborish - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/messages">
                <i class="bi bi-send"></i> Xabar yuborish
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-send"></i> Guruhga xabar yuborish
          </h1>
        </div>

        <% if (success) { %>
          <div class="alert alert-success alert-dismissible fade show">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <% if (error) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <div class="row">
          <!-- Bir martalik xabar -->
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-send"></i> Bir martalik xabar</h5>
              </div>
              <div class="card-body">
                <form method="POST" action="/messages/send-once">
                  <div class="mb-3">
                    <label class="form-label">Guruh</label>
                    <select name="group_id" class="form-select" required>
                      <option value="">Tanlang...</option>
                      <% groups.forEach(group => { %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                      <% }); %>
                    </select>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Xabar matni</label>
                    <textarea name="message" class="form-control" rows="5" required placeholder="Sizning xabaringiz..."></textarea>
                  </div>

                  <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send"></i> Yuborish
                  </button>
                </form>
              </div>
            </div>
          </div>

          <!-- Avtomatik takrorlanuvchi xabar -->
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Avtomatik xabar (Jadval)</h5>
              </div>
              <div class="card-body">
                <form method="POST" action="/messages/schedule">
                  <div class="mb-3">
                    <label class="form-label">Guruh</label>
                    <select name="group_id" class="form-select" required>
                      <option value="">Tanlang...</option>
                      <% groups.forEach(group => { %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                      <% }); %>
                    </select>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Xabar matni</label>
                    <textarea name="message" class="form-control" rows="3" required placeholder="Har safar yuborilishi kerak bo'lgan xabar..."></textarea>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Har necha daqiqada yuborish</label>
                    <select name="interval_minutes" class="form-select" required>
                      <option value="5">Har 5 daqiqada</option>
                      <option value="15">Har 15 daqiqada</option>
                      <option value="30">Har 30 daqiqada</option>
                      <option value="60">Har 1 soatda</option>
                      <option value="120">Har 2 soatda</option>
                      <option value="360">Har 6 soatda</option>
                      <option value="720">Har 12 soatda</option>
                      <option value="1440">Har kuniga</option>
                    </select>
                  </div>

                  <button type="submit" class="btn btn-success">
                    <i class="bi bi-clock-history"></i> Jadvalga qo'shish
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Faol jadvallar -->
        <% if (scheduledMessages.length > 0) { %>
        <div class="card mt-4">
          <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> Faol jadvallar</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Guruh ID</th>
                    <th>Xabar</th>
                    <th>Interval</th>
                    <th>Amallar</th>
                  </tr>
                </thead>
                <tbody>
                  <% scheduledMessages.forEach(schedule => { %>
                  <tr>
                    <td><code><%= schedule.groupId %></code></td>
                    <td><%= schedule.message.substring(0, 50) %>...</td>
                    <td><span class="badge bg-info">Har <%= schedule.intervalMinutes %> daqiqada</span></td>
                    <td>
                      <button class="btn btn-sm btn-danger" onclick="stopSchedule('<%= schedule.groupId %>')">
                        <i class="bi bi-stop-circle"></i> To'xtatish
                      </button>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <% } %>

      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function stopSchedule(groupId) {
      if (!confirm('Jadvalni to\'xtatishni xohlaysizmi?')) return;

      fetch(`/messages/stop-schedule/${groupId}`, {
        method: 'POST'
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('✅ Jadval to\'xtatildi!');
          location.reload();
        } else {
          alert('❌ Xato: ' + data.error);
        }
      });
    }
  </script>
</body>
</html>
