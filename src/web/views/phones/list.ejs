<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Telefon raqamlar - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>

          </div>

          <% if (typeof pagination !== 'undefined' && pagination.totalPages > 1) { %>
          <!-- Pagination -->
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
              <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.prevPage %>&group_id=<%= filters.group_id || '' %>&lifetime_unique=<%= filters.lifetime_unique || '' %>">
                  <i class="bi bi-chevron-left"></i> Oldingi
                </a>
              </li>

              <% for(let i = Math.max(1, pagination.page - 2); i <= Math.min(pagination.totalPages, pagination.page + 2); i++) { %>
              <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>&group_id=<%= filters.group_id || '' %>&lifetime_unique=<%= filters.lifetime_unique || '' %>">
                  <%= i %>
                </a>
              </li>
              <% } %>

              <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.nextPage %>&group_id=<%= filters.group_id || '' %>&lifetime_unique=<%= filters.lifetime_unique || '' %>">
                  Keyingi <i class="bi bi-chevron-right"></i>
                </a>
              </li>
            </ul>
          </nav>

          <div class="text-center text-muted mb-3">
            Sahifa <%= pagination.page %> / <%= pagination.totalPages %>
            (Jami: <%= pagination.totalCount %> ta raqam)
          </div>
          <% } %>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Telefon raqamlar</h1>
          <div class="btn-group">
            <a href="/phones/export" class="btn btn-success">
              <i class="bi bi-file-earmark-spreadsheet"></i> CSV Export
            </a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exportModal">
              <i class="bi bi-download"></i> TXT Export
            </button>
            <button type="button" class="btn btn-info" onclick="saveToFile()">
              <i class="bi bi-save"></i> Faylga saqlash
            </button>
          </div>
        </div>

        <!-- Filtrlar -->
        <div class="card mb-3">
          <div class="card-body">
            <form method="GET" action="/phones" class="row g-3">
              <div class="col-md-4">
                <label class="form-label">Guruh</label>
                <select name="group_id" class="form-select" id="groupFilter">
                  <option value="">Barcha guruhlar</option>
                  <% groups.forEach(group => { %>
                    <option value="<%= group.id %>" <%= filters.group_id == group.id ? 'selected' : '' %>>
                      <%= group.name %>
                    </option>
                  <% }) %>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">Umrbod unikal</label>
                <select name="lifetime_unique" class="form-select">
                  <option value="">Hammasi</option>
                  <option value="true" <%= filters.lifetime_unique ? 'selected' : '' %>>Faqat unikal</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary d-block w-100">
                  <i class="bi bi-filter"></i> Filtr qo'llash
                </button>
              </div>
            </form>
          </div>
        </div>

        <% if (phones.length === 0) { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Hozircha telefon raqamlar yo'q.
          </div>
        <% } else { %>

          <% if (typeof pagination !== 'undefined') { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Ko'rsatilmoqda: <%= ((pagination.page - 1) * pagination.limit) + 1 %> -
            <%= Math.min(pagination.page * pagination.limit, pagination.totalCount) %>
            (Jami <%= pagination.totalCount %> ta raqamdan)
          </div>
          <% } %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Telefon</th>
                  <th>Guruh</th>
                  <th>Birinchi sana</th>
                  <th>Oxirgi sana</th>
                  <th>Takror</th>
                  <th>Amallar</th>
                </tr>
              </thead>
              <tbody>
                <% phones.forEach(phone => { %>
                  <tr>
                    <td><strong><%= phone.phone %></strong></td>
                    <td><%= phone.group_name || 'N/A' %></td>
                    <td><%= new Date(phone.first_date).toLocaleDateString('uz-UZ') %></td>
                    <td><%= new Date(phone.last_date).toLocaleDateString('uz-UZ') %></td>
                    <td><span class="badge bg-secondary"><%= phone.repeat_count %></span></td>
                    <td>
                      <% if (phone.first_message || phone.last_message) { %>
                        <button type="button" class="btn btn-sm btn-info" onclick="showMessage('<%= (phone.last_message || phone.first_message || '').replace(/'/g, "\\'").replace(/\n/g, "\\n") %>')">
                          <i class="bi bi-envelope"></i> E'lonni ko'rish
                        </button>
                      <% } %>

                      <% if (!phone.lifetime_unique) { %>
                        <form method="POST" action="/phones/mark-unique/<%= phone.id %>" style="display: inline;">
                          <button type="submit" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-star"></i> Unikal
                          </button>
                        </form>
                      <% } else { %>
                        <span class="badge bg-warning">Unikal</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <!-- Export Modal -->
  <div class="modal fade" id="exportModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">TXT Export</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="exportForm">
            <div class="mb-3">
              <label class="form-label">Guruh tanlang</label>
              <select name="group_id" class="form-select" id="exportGroupSelect">
                <option value="">Barcha guruhlar</option>
                <% groups.forEach(group => { %>
                  <option value="<%= group.id %>"><%= group.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="alert alert-info">
              <i class="bi bi-info-circle"></i>
              Fayl nomi avtomatik: <strong>guruh_nomi_sana.txt</strong>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
          <button type="button" class="btn btn-primary" onclick="downloadTxt()">
            <i class="bi bi-download"></i> Yuklab olish
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- E'lon modal -->
  <div class="modal fade" id="messageModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">E'lon matni</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <pre id="messageText" style="white-space: pre-wrap; font-family: inherit;"></pre>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Yopish</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showMessage(text) {
      document.getElementById('messageText').textContent = text;
      const modal = new bootstrap.Modal(document.getElementById('messageModal'));
      modal.show();
    }

    function downloadTxt() {
      const groupId = document.getElementById('exportGroupSelect').value;
      const url = `/phones/export-txt?group_id=${groupId}`;
      window.location.href = url;

      // Modalni yopish
      const modal = bootstrap.Modal.getInstance(document.getElementById('exportModal'));
      modal.hide();
    }

    function saveToFile() {
      const groupId = document.getElementById('groupFilter').value;

      if (!confirm('Telefon raqamlarni serverda faylga saqlashni xohlaysizmi?')) {
        return;
      }

      fetch('/phones/save-to-file', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ group_id: groupId })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert(`âœ“ Muvaffaqiyatli!\n\n${data.message}\n\nFayl: ${data.fileName}\nJoylashuv: exports/`);
        } else {
          alert('Xato: ' + data.error);
        }
      })
      .catch(err => {
        alert('Xato yuz berdi: ' + err.message);
      });
    }
  </script>
</body>
</html>
