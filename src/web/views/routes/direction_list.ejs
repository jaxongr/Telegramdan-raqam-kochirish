<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/routes">
                <i class="bi bi-signpost"></i> Yo'nalishlar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <a href="/routes" class="text-decoration-none text-muted">
              <i class="bi bi-arrow-left"></i>
            </a>
            <% if (direction === 'from-tashkent') { %>
              <i class="bi bi-arrow-right-circle text-primary"></i>
            <% } else { %>
              <i class="bi bi-arrow-left-circle text-success"></i>
            <% } %>
            <%= title %>
          </h1>
        </div>

        <% if (routes.length === 0) { %>
          <!-- Bo'sh -->
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Bu yo'nalishda hali yo'nalishlar yo'q.
          </div>
        <% } else { %>
          <%
            // Direction ga qarab guruhlash
            const groupStats = {};

            routes.forEach(route => {
              let groupName;

              if (direction === 'from-tashkent') {
                // TOSHKENTDAN: Har bir tuman alohida
                // "Toshkent → Chiroqchi" dan "Chiroqchi"ni olish
                const parts = route.name.split('→');
                groupName = parts[1] ? parts[1].trim() : "Noma'lum";
              } else {
                // VILOYATLARDAN TOSHKENTGA: Faqat viloyatlar (tumanlarni birlashtirish)
                // "Qashqadaryo (Qarshi) → Toshkent" dan "Qashqadaryo"ni olish
                let regionName = route.name.split('→')[0].trim();

                // Agar tuman nomi bo'lsa (qavs ichida), uni olib tashlash
                const parenIndex = regionName.indexOf('(');
                if (parenIndex !== -1) {
                  regionName = regionName.substring(0, parenIndex).trim();
                }
                groupName = regionName;
              }

              if (!groupStats[groupName]) {
                groupStats[groupName] = {
                  name: groupName,
                  routes: [],
                  totalMessages: 0,
                  totalPhones: 0
                };
              }

              groupStats[groupName].routes.push(route);
              groupStats[groupName].totalMessages += route.messageCount || 0;
              // TODO: Unikal raqamlar sonini hisoblash
            });

            const regions = Object.values(groupStats);
          %>

          <!-- Viloyatlar ro'yxati - kichik kartochkalar (4 ta bir qatorda) -->
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3">
            <% regions.forEach(region => { %>
              <div class="col">
                <%
                  // Agar bitta yo'nalish bo'lsa, to'g'ridan-to'g'ri unga o'tish
                  let clickUrl;
                  if (region.routes.length === 1) {
                    clickUrl = '/routes/messages/' + region.routes[0].id;
                  } else {
                    clickUrl = '/routes/region/' + encodeURIComponent(region.routes[0].name.split('→')[0].trim());
                  }
                %>
                <div class="card h-100 shadow-sm" style="cursor: pointer; transition: all 0.3s; border-radius: 12px;"
                     onclick="window.location.href='<%= clickUrl %>'"
                     onmouseover="this.style.transform='translateY(-8px)'; this.style.boxShadow='0 12px 24px rgba(0,0,0,0.15)';"
                     onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='';">
                  <div class="card-body text-center p-4">
                    <div class="mb-3">
                      <i class="bi bi-geo-alt-fill text-success" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3"><%= region.name %></h5>
                    <hr>
                    <div class="d-flex justify-content-around mb-3">
                      <div>
                        <small class="text-muted d-block">E'lonlar</small>
                        <span class="badge bg-info fs-6">
                          <%= region.totalMessages %>
                        </span>
                      </div>
                      <div>
                        <small class="text-muted d-block">Raqamlar</small>
                        <span class="badge bg-primary fs-6">
                          0
                        </span>
                      </div>
                    </div>
                    <button class="btn btn-sm btn-success w-100">
                      <i class="bi bi-box-arrow-in-right"></i> Kirish
                    </button>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>

          <div class="mt-4">
            <p class="text-muted">
              <i class="bi bi-info-circle"></i>
              Jami: <strong><%= regions.length %></strong> ta yo'nalish
            </p>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
