<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
    .route-card {
      transition: all 0.3s;
      border-left: 4px solid transparent;
    }
    .route-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 16px rgba(0,0,0,0.2);
      border-left-color: #0d6efd;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/routes">
                <i class="bi bi-signpost"></i> Yo'nalishlar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <a href="/routes" class="text-decoration-none text-muted">
              <i class="bi bi-arrow-left"></i>
            </a>
            <% if (direction === 'from-tashkent') { %>
              <i class="bi bi-arrow-right-circle text-primary"></i>
            <% } else { %>
              <i class="bi bi-arrow-left-circle text-success"></i>
            <% } %>
            <%= title %>
          </h1>
        </div>

        <% if (routes.length === 0) { %>
          <!-- Bo'sh -->
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Bu yo'nalishda hali yo'nalishlar yo'q.
          </div>
        <% } else { %>
          <!-- Yo'nalishlar ro'yxati - UZUN FORMAT -->
          <div class="card">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead class="<%= direction === 'from-tashkent' ? 'table-primary' : 'table-success' %>">
                    <tr>
                      <th style="width: 5%">#</th>
                      <th style="width: 30%">Yo'nalish nomi</th>
                      <th style="width: 10%" class="text-center">Holat</th>
                      <th style="width: 10%" class="text-center">Vaqt</th>
                      <th style="width: 15%" class="text-center">SMS</th>
                      <th style="width: 10%" class="text-center">E'lonlar</th>
                      <th style="width: 20%" class="text-center">Amallar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% routes.forEach((route, index) => { %>
                      <tr>
                        <td class="align-middle"><strong><%= index + 1 %></strong></td>
                        <td class="align-middle">
                          <h6 class="mb-1">
                            <% if (direction === 'from-tashkent') { %>
                              <i class="bi bi-arrow-right-circle text-primary"></i>
                            <% } else { %>
                              <i class="bi bi-arrow-left-circle text-success"></i>
                            <% } %>
                            <%= route.name %>
                          </h6>
                        </td>
                        <td class="align-middle text-center">
                          <% if (route.active) { %>
                            <span class="badge bg-success">
                              <i class="bi bi-check-circle"></i> Faol
                            </span>
                          <% } else { %>
                            <span class="badge bg-secondary">
                              <i class="bi bi-x-circle"></i> Nofaol
                            </span>
                          <% } %>
                        </td>
                        <td class="align-middle text-center">
                          <span class="badge bg-light text-dark">
                            <i class="bi bi-clock"></i> <%= route.time_window_minutes %> daq
                          </span>
                        </td>
                        <td class="align-middle text-center">
                          <span class="badge bg-primary">
                            <%= route.successSent || 0 %> / <%= route.totalSent || 0 %>
                          </span>
                        </td>
                        <td class="align-middle text-center">
                          <span class="badge bg-info">
                            <i class="bi bi-chat-text"></i> <%= route.messageCount || 0 %>
                          </span>
                        </td>
                        <td class="align-middle text-center">
                          <div class="btn-group" role="group">
                            <a href="/routes/messages/<%= route.id %>" class="btn btn-sm btn-outline-info" title="E'lonlar">
                              <i class="bi bi-list-ul"></i>
                            </a>
                            <a href="/routes/send/<%= route.id %>" class="btn btn-sm btn-outline-primary" title="SMS yuborish">
                              <i class="bi bi-send"></i>
                            </a>
                            <a href="/routes/edit/<%= route.id %>" class="btn btn-sm btn-outline-warning" title="Tahrirlash">
                              <i class="bi bi-pencil"></i>
                            </a>
                            <button onclick="deleteRoute(<%= route.id %>, '<%= route.name %>')" class="btn btn-sm btn-outline-danger" title="O'chirish">
                              <i class="bi bi-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <p class="text-muted">
              <i class="bi bi-info-circle"></i>
              Jami: <strong><%= routes.length %></strong> ta yo'nalish
            </p>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    async function deleteRoute(routeId, routeName) {
      const confirmMessage = `"${routeName}" yo'nalishini o'chirmoqchimisiz?`;

      if (!confirm(confirmMessage)) {
        return;
      }

      try {
        const response = await fetch(`/routes/delete/${routeId}`, {
          method: 'POST'
        });

        const result = await response.json();

        if (result.success) {
          alert('✅ ' + result.message);
          window.location.reload();
        } else {
          alert('❌ Xato: ' + result.error);
        }
      } catch (error) {
        alert('❌ Xato: ' + error.message);
      }
    }
  </script>
</body>
</html>
