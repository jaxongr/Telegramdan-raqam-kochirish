<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yo'nalishlar - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/routes">
                <i class="bi bi-signpost"></i> Yo'nalishlar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Yo'nalishlar</h1>
          <% if (sortedRegions.length > 0) { %>
            <a href="/routes/add" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> Yangi yo'nalish
            </a>
          <% } %>
        </div>

        <!-- Success/Error Alerts -->
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- CHIROYLI PROFESSIONAL KARTOCHKALAR -->
        <style>
          .direction-card {
            min-height: 450px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: none;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
          }
          .direction-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
            opacity: 0;
            transition: opacity 0.4s;
          }
          .direction-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0,0,0,0.25);
          }
          .direction-card:hover::before {
            opacity: 1;
          }
          .direction-card.to-tashkent {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.4);
          }
          .direction-card.to-tashkent:hover {
            box-shadow: 0 25px 50px rgba(16, 185, 129, 0.6);
          }
          .direction-card.from-tashkent {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
          }
          .direction-card.from-tashkent:hover {
            box-shadow: 0 25px 50px rgba(59, 130, 246, 0.6);
          }
          .direction-icon {
            font-size: 8rem;
            animation: pulse 2s infinite;
          }
          @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
          }
          .direction-badge {
            background: rgba(255,255,255,0.25);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.3);
            padding: 15px 30px;
            border-radius: 50px;
            font-size: 1.3rem;
            font-weight: 600;
          }
          .direction-btn {
            background: rgba(255,255,255,0.9);
            border: none;
            padding: 18px 40px;
            border-radius: 50px;
            font-size: 1.2rem;
            font-weight: 600;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
          }
          .direction-btn:hover {
            background: white;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
          }
          .to-tashkent .direction-btn {
            color: #059669;
          }
          .from-tashkent .direction-btn {
            color: #2563eb;
          }
        </style>

        <div class="row g-4">
          <!-- 1. VILOYATLARDAN → TOSHKENTGA -->
          <div class="col-md-6">
            <div class="direction-card to-tashkent" onclick="window.location.href='/routes/add/to-tashkent'">
              <div class="card-body text-center text-white p-5 d-flex flex-column justify-content-center h-100">
                <div class="direction-icon mb-4">
                  <i class="bi bi-arrow-left-circle-fill"></i>
                </div>

                <h1 class="display-5 fw-bold mb-3">VILOYATLARDAN</h1>
                <div class="mb-3">
                  <i class="bi bi-chevron-double-down" style="font-size: 2.5rem; opacity: 0.8;"></i>
                </div>
                <h1 class="display-5 fw-bold mb-4">TOSHKENTGA</h1>

                <p class="fs-5 mb-4" style="opacity: 0.9;">
                  Andijon, Farg'ona, Samarqand, Buxoro<br>
                  va boshqa viloyatlardan<br>
                  <strong>Toshkent shahriga</strong>
                </p>

                <%
                  let toTashkentCount = 0;
                  if (groupedRoutes) {
                    Object.keys(groupedRoutes).forEach(region => {
                      groupedRoutes[region].forEach(route => {
                        if (route.to_keywords && route.to_keywords.toLowerCase().includes('toshkent')) {
                          toTashkentCount++;
                        }
                      });
                    });
                  }
                %>
                <% if (toTashkentCount > 0) { %>
                  <div class="mb-4">
                    <span class="direction-badge">
                      <i class="bi bi-check-circle-fill"></i> <%= toTashkentCount %> ta yo'nalish
                    </span>
                  </div>
                <% } %>

                <button class="direction-btn">
                  <i class="bi bi-box-arrow-in-right"></i> KIRISH
                </button>
              </div>
            </div>
          </div>

          <!-- 2. TOSHKENTDAN → VILOYATLARGA -->
          <div class="col-md-6">
            <div class="direction-card from-tashkent" onclick="window.location.href='/routes/add/from-tashkent'">
              <div class="card-body text-center text-white p-5 d-flex flex-column justify-content-center h-100">
                <div class="direction-icon mb-4">
                  <i class="bi bi-arrow-right-circle-fill"></i>
                </div>

                <h1 class="display-5 fw-bold mb-3">TOSHKENTDAN</h1>
                <div class="mb-3">
                  <i class="bi bi-chevron-double-down" style="font-size: 2.5rem; opacity: 0.8;"></i>
                </div>
                <h1 class="display-5 fw-bold mb-4">VILOYATLARGA</h1>

                <p class="fs-5 mb-4" style="opacity: 0.9;">
                  <strong>Toshkent shahridan</strong><br>
                  Andijon, Farg'ona, Samarqand, Buxoro<br>
                  va boshqa viloyatlarga
                </p>

                <%
                  let fromTashkentCount = 0;
                  if (groupedRoutes) {
                    Object.keys(groupedRoutes).forEach(region => {
                      groupedRoutes[region].forEach(route => {
                        if (route.from_keywords && route.from_keywords.toLowerCase().includes('toshkent')) {
                          fromTashkentCount++;
                        }
                      });
                    });
                  }
                %>
                <% if (fromTashkentCount > 0) { %>
                  <div class="mb-4">
                    <span class="direction-badge">
                      <i class="bi bi-check-circle-fill"></i> <%= fromTashkentCount %> ta yo'nalish
                    </span>
                  </div>
                <% } %>

                <button class="direction-btn">
                  <i class="bi bi-box-arrow-in-right"></i> KIRISH
                </button>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Yo'nalishni o'chirish
    async function deleteRoute(routeId, routeName) {
      const confirmMessage = `"${routeName}" yo'nalishini o'chirmoqchimisiz?\n\n` +
        `Bu yo'nalish bo'yicha SMS yuborilmaydi.\n\n` +
        `Davom etasizmi?`;

      if (!confirm(confirmMessage)) {
        return;
      }

      try {
        const response = await fetch(`/routes/delete/${routeId}`, {
          method: 'POST'
        });

        const result = await response.json();

        if (result.success) {
          alert('✅ ' + result.message);
          window.location.reload();
        } else {
          alert('❌ Xato: ' + result.error);
        }
      } catch (error) {
        alert('❌ Xato: ' + error.message);
      }
    }
  </script>
</body>
</html>
