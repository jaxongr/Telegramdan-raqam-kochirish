<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Telegram Guruhlar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <%- include('../layout', { body: `
  <div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-telegram text-primary"></i> Telegram Guruhlar</h2>
      <button class="btn btn-outline-primary" onclick="location.reload()">
        <i class="bi bi-arrow-clockwise"></i> Yangilash
      </button>
    </div>

    <!-- Statistika -->
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card text-white bg-primary">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-collection"></i> Jami guruhlar</h5>
            <h2>${stats.total}</h2>
            <small>Session'dagi barcha guruhlar</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-success">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-eye"></i> Monitoring</h5>
            <h2>${stats.monitoring}</h2>
            <small>Faol kuzatilmoqda</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-info">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-chat-dots"></i> SMS faol</h5>
            <h2>${stats.smsEnabled}</h2>
            <small>SMS yuborish yoqilgan</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-secondary">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-eye-slash"></i> Kuzatilmaydi</h5>
            <h2>${stats.notInDatabase}</h2>
            <small>Database'da yo'q</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Filter -->
    <div class="card mb-3">
      <div class="card-body">
        <div class="row g-2">
          <div class="col-md-4">
            <input type="text" id="searchInput" class="form-control" placeholder="🔍 Guruh nomi bo'yicha qidirish...">
          </div>
          <div class="col-md-2">
            <select id="filterStatus" class="form-select">
              <option value="all">Barchasi</option>
              <option value="monitoring">Kuzatilmoqda</option>
              <option value="not-monitoring">Kuzatilmaydi</option>
              <option value="sms-enabled">SMS faol</option>
            </select>
          </div>
          <div class="col-md-2">
            <select id="filterType" class="form-select">
              <option value="all">Barcha turlar</option>
              <option value="group">Guruhlar</option>
              <option value="channel">Kanallar</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Guruhlar jadvali -->
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Guruh nomi</th>
                <th>Tur</th>
                <th>Telegram ID</th>
                <th>Status</th>
                <th>SMS</th>
                <th>Keywords</th>
                <th>Amallar</th>
              </tr>
            </thead>
            <tbody id="groupsTable">
              <% groups.forEach((group, index) => { %>
              <tr data-status="<%= group.active ? 'monitoring' : 'not-monitoring' %>"
                  data-sms="<%= group.sms_enabled ? 'sms-enabled' : 'sms-disabled' %>"
                  data-type="<%= group.isChannel ? 'channel' : 'group' %>">
                <td><%= index + 1 %></td>
                <td>
                  <strong><%= group.name %></strong>
                  <% if (!group.inDatabase) { %>
                    <br><small class="text-muted">Database'da yo'q</small>
                  <% } %>
                </td>
                <td>
                  <% if (group.isChannel) { %>
                    <span class="badge bg-info">Kanal</span>
                  <% } else { %>
                    <span class="badge bg-primary">Guruh</span>
                  <% } %>
                </td>
                <td><code><%= group.telegram_id %></code></td>
                <td>
                  <% if (group.active) { %>
                    <span class="badge bg-success">
                      <i class="bi bi-eye"></i> Kuzatilmoqda
                    </span>
                  <% } else if (group.inDatabase) { %>
                    <span class="badge bg-warning">
                      <i class="bi bi-pause"></i> To'xtatilgan
                    </span>
                  <% } else { %>
                    <span class="badge bg-secondary">
                      <i class="bi bi-eye-slash"></i> Kuzatilmaydi
                    </span>
                  <% } %>
                </td>
                <td>
                  <% if (group.sms_enabled) { %>
                    <span class="badge bg-success">
                      <i class="bi bi-check-circle"></i> Faol
                    </span>
                  <% } else if (group.inDatabase) { %>
                    <span class="badge bg-secondary">
                      <i class="bi bi-x-circle"></i> O'chiq
                    </span>
                  <% } else { %>
                    <span class="text-muted">-</span>
                  <% } %>
                </td>
                <td>
                  <% if (group.keywords) { %>
                    <small class="text-muted"><%= group.keywords.substring(0, 30) %>...</small>
                  <% } else { %>
                    <span class="text-muted">-</span>
                  <% } %>
                </td>
                <td>
                  <% if (group.inDatabase && group.db_id) { %>
                    <a href="/groups/edit/<%= group.db_id %>" class="btn btn-sm btn-outline-primary">
                      <i class="bi bi-pencil"></i> Tahrirlash
                    </a>
                  <% } else { %>
                    <a href="/groups/add?telegram_id=<%= encodeURIComponent(group.telegram_id) %>&name=<%= encodeURIComponent(group.name) %>"
                       class="btn btn-sm btn-success">
                      <i class="bi bi-plus-circle"></i> Qo'shish
                    </a>
                  <% } %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="mt-3 text-muted">
      <small>
        <i class="bi bi-info-circle"></i>
        Bu sahifada Telegram session'ingizdagi barcha guruh va kanallar ko'rsatilgan.
        Monitoring qo'shish uchun "Qo'shish" tugmasini bosing.
      </small>
    </div>
  </div>

  <script>
    // Qidiruv
    document.getElementById('searchInput').addEventListener('input', filterTable);
    document.getElementById('filterStatus').addEventListener('change', filterTable);
    document.getElementById('filterType').addEventListener('change', filterTable);

    function filterTable() {
      const searchText = document.getElementById('searchInput').value.toLowerCase();
      const statusFilter = document.getElementById('filterStatus').value;
      const typeFilter = document.getElementById('filterType').value;

      const rows = document.querySelectorAll('#groupsTable tr');

      rows.forEach(row => {
        const name = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
        const status = row.getAttribute('data-status');
        const sms = row.getAttribute('data-sms');
        const type = row.getAttribute('data-type');

        let showRow = true;

        // Text search
        if (searchText && !name.includes(searchText)) {
          showRow = false;
        }

        // Status filter
        if (statusFilter !== 'all') {
          if (statusFilter === 'monitoring' && status !== 'monitoring') {
            showRow = false;
          } else if (statusFilter === 'not-monitoring' && status !== 'not-monitoring') {
            showRow = false;
          } else if (statusFilter === 'sms-enabled' && sms !== 'sms-enabled') {
            showRow = false;
          }
        }

        // Type filter
        if (typeFilter !== 'all' && type !== typeFilter) {
          showRow = false;
        }

        row.style.display = showRow ? '' : 'none';
      });
    }
  </script>
  ` }) %>
</body>
</html>
