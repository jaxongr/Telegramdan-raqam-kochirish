<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bosh sahifa - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
    .stats-card {
      border-left: 4px solid #0d6efd;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/messages">
                <i class="bi bi-send"></i> Habar Yuborish
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
          </ul>

          <hr class="text-white">

          <h5 class="text-white px-3 mb-3 mt-3">
            <i class="bi bi-megaphone"></i> Broadcast
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/accounts">
                <i class="bi bi-people"></i> Akkauntlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/broadcast">
                <i class="bi bi-broadcast"></i> Habar Yuborish
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/broadcast/groups">
                <i class="bi bi-chat-dots"></i> Guruhlar Ro'yxati
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/files">
                <i class="bi bi-folder"></i> Fayllar
              </a>
            </li>
          </ul>

          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Bosh sahifa</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <% if (telegramStatus.connected) { %>
              <span class="badge bg-success me-2">
                <i class="bi bi-wifi"></i> Telegram ulangan
              </span>
            <% } else { %>
              <span class="badge bg-danger me-2">
                <i class="bi bi-wifi-off"></i> Telegram uzilgan
              </span>
            <% } %>

            <% if (telegramStatus.monitoring) { %>
              <span class="badge bg-success">
                <i class="bi bi-eye"></i> Monitoring faol
              </span>
            <% } else { %>
              <span class="badge bg-warning">
                <i class="bi bi-eye-slash"></i> Monitoring o'chiq
              </span>
            <% } %>
          </div>
        </div>

        <!-- Statistika - Real-time Monitoring -->
        <h4 class="mb-3"><i class="bi bi-eye"></i> Real-time kuzatuv (Jonli)</h4>
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h6 class="text-muted">Guruhlar</h6>
                <h3><%= stats.activeGroups %> / <%= stats.totalGroups %></h3>
                <small class="text-muted">Faol / Jami</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h6 class="text-muted">Telefon raqamlar</h6>
                <h3><%= stats.uniquePhones %></h3>
                <small class="text-muted">Unikal (jonli)</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h6 class="text-muted">SMS bugun</h6>
                <h3><%= stats.smsSentToday %></h3>
                <small class="text-muted">Yuborilgan</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h6 class="text-muted">SemySMS balans</h6>
                <h3><%= totalBalance.toFixed(2) %></h3>
                <small class="text-muted">Umumiy</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Skanerlash holati va Navbat -->
        <% if (currentProgress.isScanning || (queueStatus.pendingTasks && queueStatus.pendingTasks.length > 0)) { %>
        <h4 class="mb-3"><i class="bi bi-hourglass-split"></i> Skanerlash holati</h4>

        <!-- Hozirgi skan -->
        <% if (currentProgress.isScanning) { %>
        <div class="alert alert-info mb-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="mb-0">
              <i class="bi bi-activity"></i>
              <% if (currentProgress.isPaused) { %>
                ‚è∏ Pauza (Davom ettirilmoqda...)
              <% } else { %>
                üîÑ Skanerlash davom etmoqda...
              <% } %>
            </h5>
            <span class="badge bg-primary"><%= currentProgress.groupName || 'N/A' %></span>
          </div>

          <div class="progress mb-2" style="height: 25px;">
            <%
              const percent = currentProgress.totalMessages > 0
                ? Math.round((currentProgress.processedMessages / currentProgress.totalMessages) * 100)
                : 0;
            %>
            <div class="progress-bar progress-bar-striped progress-bar-animated"
                 role="progressbar"
                 style="width: <%= percent %>%">
              <%= percent %>%
            </div>
          </div>

          <div class="row">
            <div class="col-md-3">
              <strong>Xabarlar:</strong> <%= currentProgress.processedMessages || 0 %> / <%= currentProgress.totalMessages || 0 %>
            </div>
            <div class="col-md-3">
              <strong>Raqamlar:</strong> <%= currentProgress.phonesFound || 0 %> ta (<%= currentProgress.uniquePhones || 0 %> unikal)
            </div>
            <div class="col-md-3">
              <strong>Tezlik:</strong> <%= currentProgress.messagesPerMinute || 0 %> msg/min
            </div>
            <div class="col-md-3">
              <strong>Vaqt:</strong> <%= Math.round((Date.now() - (currentProgress.startTime || Date.now())) / 60000) %> daq
            </div>
          </div>
        </div>
        <% } %>

        <!-- Navbat -->
        <% if (queueStatus.pendingTasks && queueStatus.pendingTasks.length > 0) { %>
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
              <i class="bi bi-list-ul"></i> Navbat
              <span class="badge bg-dark"><%= queueStatus.pendingTasks.length %> ta</span>
            </h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-sm table-hover mb-0">
                <thead>
                  <tr>
                    <th style="width: 10%">#</th>
                    <th style="width: 50%">Task nomi</th>
                    <th style="width: 30%">Fayl</th>
                    <th style="width: 10%">Amal</th>
                  </tr>
                </thead>
                <tbody>
                  <% queueStatus.pendingTasks.forEach((task, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td>
                      <% if (index === 0 && currentProgress.isScanning) { %>
                        <span class="badge bg-success me-2">Jarayonda</span>
                      <% } %>
                      <%= task.name %>
                    </td>
                    <td><small class="text-muted"><%= task.filename || 'N/A' %></small></td>
                    <td>
                      <button class="btn btn-sm btn-outline-danger" onclick="removeFromQueue('<%= task.id %>')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <% } %>
        <% } %>

        <!-- Statistika - Historical Scraping -->
        <h4 class="mb-3"><i class="bi bi-clock-history"></i> Eski xabarlardan (Arxiv)</h4>
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card" style="border-left: 4px solid #6c757d;">
              <div class="card-body">
                <h6 class="text-muted">Export fayllari</h6>
                <h3><%= historyStats.totalExports %></h3>
                <small class="text-muted">Saqlangan fayllar</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card" style="border-left: 4px solid #6c757d;">
              <div class="card-body">
                <h6 class="text-muted">Eski xabarlardan</h6>
                <h3><%= historyStats.totalPhones %></h3>
                <small class="text-muted">Jami raqamlar</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card" style="border-left: 4px solid #6c757d;">
              <div class="card-body">
                <h6 class="text-muted">Unikal raqamlar</h6>
                <h3><%= historyStats.uniquePhones %></h3>
                <small class="text-muted">Eski xabarlardan</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card" style="border-left: 4px solid #6c757d;">
              <div class="card-body">
                <h6 class="text-muted">Oxirgi skanerlash</h6>
                <h3><small><%= historyStats.lastScrape || 'Hali yo\'q' %></small></h3>
                <small class="text-muted">
                  <a href="/history/results">Ko'rish ‚Üí</a>
                </small>
              </div>
            </div>
          </div>
        </div>

        <!-- Guruhlar bo'yicha statistika -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="mb-0"><i class="bi bi-pie-chart"></i> Guruhlar bo'yicha statistika</h4>
          <% if (groupStats.length > 20) { %>
            <small class="text-muted">TOP 20 guruh ko'rsatilmoqda (<a href="/groups">Barchasi ‚Üí</a>)</small>
          <% } %>
        </div>
        <div class="table-responsive mb-4">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th style="width: 25%">Guruh nomi</th>
                <th style="width: 8%">Status</th>
                <th style="width: 12%">Unikal raqamlar</th>
                <th style="width: 10%">Jami</th>
                <th style="width: 10%">Takror</th>
                <th style="width: 10%">SMS</th>
                <th style="width: 10%">Muvaffaqiyat</th>
                <th style="width: 15%">Success %</th>
              </tr>
            </thead>
            <tbody>
              <% if (groupStats.length === 0) { %>
                <tr>
                  <td colspan="8" class="text-center text-muted">Hali guruhlar qo'shilmagan</td>
                </tr>
              <% } else { %>
                <%
                  // Faqat TOP 20 guruhni ko'rsatish (tezlik uchun)
                  const topGroups = groupStats.slice(0, 20);
                  topGroups.forEach(group => {
                %>
                  <tr>
                    <td>
                      <strong><%= group.name %></strong>
                    </td>
                    <td>
                      <% if (group.active) { %>
                        <span class="badge bg-success">Faol</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Nofaol</span>
                      <% } %>
                    </td>
                    <td>
                      <strong class="text-primary"><%= group.unique_phones.toLocaleString() %></strong>
                    </td>
                    <td>
                      <%= group.total_phones.toLocaleString() %>
                    </td>
                    <td>
                      <% if (group.repeat_count > 0) { %>
                        <span class="badge bg-info"><%= group.repeat_count.toLocaleString() %>x</span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <strong><%= group.sms_sent.toLocaleString() %></strong>
                    </td>
                    <td>
                      <%= group.sms_success.toLocaleString() %>
                    </td>
                    <td>
                      <% if (group.sms_sent > 0) { %>
                        <% if (group.success_rate >= 80) { %>
                          <span class="badge bg-success"><%= group.success_rate %>%</span>
                        <% } else if (group.success_rate >= 50) { %>
                          <span class="badge bg-warning"><%= group.success_rate %>%</span>
                        <% } else { %>
                          <span class="badge bg-danger"><%= group.success_rate %>%</span>
                        <% } %>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Oxirgi SMS -->
        <h4 class="mb-3">Oxirgi yuborilgan SMS</h4>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Vaqt</th>
                <th>Qayerga</th>
                <th>Guruh</th>
                <th>Xabar</th>
                <th>Holat</th>
              </tr>
            </thead>
            <tbody>
              <% if (recentSMS.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">Hali SMS yuborilmagan</td>
                </tr>
              <% } else { %>
                <% recentSMS.forEach(sms => { %>
                  <tr>
                    <td><%= new Date(sms.sent_at).toLocaleString('uz-UZ') %></td>
                    <td><%= sms.to_phone %></td>
                    <td><%= sms.group_name || 'N/A' %></td>
                    <td><%= sms.message.substring(0, 50) %>...</td>
                    <td>
                      <% if (sms.status === 'success') { %>
                        <span class="badge bg-success">Yuborildi</span>
                      <% } else { %>
                        <span class="badge bg-danger">Xato</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Navbatdan taskni o'chirish
    function removeFromQueue(taskId) {
      if (!confirm('Bu taskni navbatdan o\'chirmoqchimisiz?')) {
        return;
      }

      fetch(`/history/queue/${taskId}`, {
        method: 'DELETE'
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Task navbatdan o\'chirildi');
          location.reload();
        } else {
          alert('Xato: ' + (data.error || 'Noma\'lum xato'));
        }
      })
      .catch(error => {
        alert('Xato: ' + error.message);
      });
    }

    // Har 10 soniyada avtomatik yangilash (faqat agar skan yoki navbat bo'lsa)
    <% if (currentProgress.isScanning || (queueStatus.pendingTasks && queueStatus.pendingTasks.length > 0)) { %>
    setInterval(() => {
      location.reload();
    }, 10000); // 10 soniya
    <% } %>
  </script>
</body>
</html>
