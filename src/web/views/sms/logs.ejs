<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SMS loglar - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
    .filter-card {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    .stat-badge {
      padding: 0.5rem 1rem;
      border-radius: 6px;
      display: inline-block;
      margin: 0.25rem;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <i class="bi bi-chat-dots"></i> SMS Loglar
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/sms/routes" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-signpost"></i> Yo'nalish SMS loglar
            </a>
          </div>
        </div>

        <!-- Statistics -->
        <% if (stats) { %>
          <div class="row mb-3">
            <div class="col-md-12">
              <div class="stat-badge bg-primary text-white">
                <i class="bi bi-bar-chart"></i> Jami: <strong><%= stats.total %></strong>
              </div>
              <div class="stat-badge bg-success text-white">
                <i class="bi bi-check-circle"></i> Yuborildi: <strong><%= stats.success %></strong>
              </div>
              <div class="stat-badge bg-warning text-dark">
                <i class="bi bi-clock"></i> Kutilmoqda: <strong><%= stats.cooldown %></strong>
              </div>
              <div class="stat-badge bg-info text-white">
                <i class="bi bi-hourglass"></i> Pending: <strong><%= stats.pending %></strong>
              </div>
              <div class="stat-badge bg-danger text-white">
                <i class="bi bi-x-circle"></i> Xato: <strong><%= stats.failed %></strong>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Filter Form -->
        <div class="filter-card">
          <form method="GET" action="/sms" class="row g-3">
            <div class="col-md-3">
              <label class="form-label"><i class="bi bi-funnel"></i> Holat</label>
              <select name="status" class="form-select">
                <option value="">Barchasi</option>
                <option value="success" <%= filters.status === 'success' ? 'selected' : '' %>>Yuborildi</option>
                <option value="cooldown" <%= filters.status === 'cooldown' ? 'selected' : '' %>>Kutilmoqda</option>
                <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="failed" <%= filters.status === 'failed' ? 'selected' : '' %>>Xato</option>
                <option value="blocked" <%= filters.status === 'blocked' ? 'selected' : '' %>>Bloklangan</option>
              </select>
            </div>

            <div class="col-md-3">
              <label class="form-label"><i class="bi bi-telephone"></i> Telefon raqam</label>
              <input type="text" name="phone" class="form-control" placeholder="+998..." value="<%= filters.phone || '' %>">
            </div>

            <div class="col-md-2">
              <label class="form-label"><i class="bi bi-list-ol"></i> Limit</label>
              <select name="limit" class="form-select">
                <option value="50" <%= filters.limit === 50 ? 'selected' : '' %>>50</option>
                <option value="100" <%= filters.limit === 100 ? 'selected' : '' %>>100</option>
                <option value="200" <%= filters.limit === 200 ? 'selected' : '' %>>200</option>
                <option value="500" <%= filters.limit === 500 ? 'selected' : '' %>>500</option>
              </select>
            </div>

            <div class="col-md-4 d-flex align-items-end">
              <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-search"></i> Qidirish
              </button>
              <a href="/sms" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Tozalash
              </a>
            </div>
          </form>
        </div>

        <% if (logs.length === 0) { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Hech qanday SMS topilmadi.
          </div>
        <% } else { %>
          <!-- Pagination Info -->
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="text-muted">
              Jami <strong><%= pagination.total %></strong> ta yozuv (<strong><%= pagination.page %></strong> / <strong><%= pagination.totalPages %></strong> sahifa)
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Vaqt</th>
                  <th>Telefon</th>
                  <th>Guruh</th>
                  <th>Xabar</th>
                  <th>Holat</th>
                </tr>
              </thead>
              <tbody>
                <% logs.forEach(log => { %>
                  <tr>
                    <td><%= new Date(log.sent_at).toLocaleString('uz-UZ', { timeZone: 'Asia/Tashkent' }) %></td>
                    <td><strong><%= log.to_phone %></strong></td>
                    <td><%= log.group_name || 'N/A' %></td>
                    <td><%= (log.message || '').substring(0, 50) %>...</td>
                    <td>
                      <% if (log.status === 'success') { %>
                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Yuborildi</span>
                      <% } else if (log.status === 'cooldown') { %>
                        <span class="badge bg-warning text-dark" title="5 soatlik limitda kutish">
                          <i class="bi bi-clock"></i> Kutilmoqda
                          <% if (log.remaining_minutes !== null && log.remaining_minutes !== undefined) { %>
                            (<%= log.remaining_minutes %> daq)
                          <% } %>
                        </span>
                      <% } else if (log.status === 'pending') { %>
                        <span class="badge bg-info"><i class="bi bi-hourglass"></i> Pending</span>
                      <% } else if (log.status === 'blocked') { %>
                        <span class="badge bg-secondary"><i class="bi bi-ban"></i> Bloklangan</span>
                      <% } else { %>
                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Xato</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (pagination.totalPages > 1) { %>
            <nav>
              <ul class="pagination">
                <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                  <a class="page-link" href="/sms?page=<%= pagination.page - 1 %>&status=<%= filters.status || '' %>&phone=<%= filters.phone || '' %>&limit=<%= filters.limit %>">
                    Oldingi
                  </a>
                </li>

                <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                  <% if (i === 1 || i === pagination.totalPages || (i >= pagination.page - 2 && i <= pagination.page + 2)) { %>
                    <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                      <a class="page-link" href="/sms?page=<%= i %>&status=<%= filters.status || '' %>&phone=<%= filters.phone || '' %>&limit=<%= filters.limit %>">
                        <%= i %>
                      </a>
                    </li>
                  <% } else if (i === pagination.page - 3 || i === pagination.page + 3) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
                <% } %>

                <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                  <a class="page-link" href="/sms?page=<%= pagination.page + 1 %>&status=<%= filters.status || '' %>&phone=<%= filters.phone || '' %>&limit=<%= filters.limit %>">
                    Keyingi
                  </a>
                </li>
              </ul>
            </nav>
          <% } %>
        <% } %>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
