<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eski xabarlar natijalar - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
    .export-card {
      border-radius: 12px;
      border: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: all 0.3s ease;
      overflow: hidden;
    }
    .export-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }
    .export-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 1.25rem;
    }
    .stat-box {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 1rem;
      text-align: center;
    }
    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      margin: 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .download-btn {
      border-radius: 8px;
      padding: 0.6rem 1.2rem;
      font-weight: 500;
      transition: all 0.3s;
    }
    .download-btn:hover {
      transform: scale(1.05);
    }
    .summary-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }
    .summary-stat {
      text-align: center;
      padding: 1rem;
    }
    .summary-stat h2 {
      font-size: 3rem;
      font-weight: 700;
      margin: 0;
    }
    .summary-stat p {
      margin: 0.5rem 0 0 0;
      opacity: 0.9;
    }
    .badge-date {
      background: rgba(255,255,255,0.2);
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4 py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h1 class="h2 mb-1">
              <i class="bi bi-archive-fill text-primary"></i> Arxiv Natijalar
            </h1>
            <p class="text-muted mb-0">Eski xabarlardan topilgan barcha telefon raqamlar</p>
          </div>
          <a href="/history" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Skanerlash
          </a>
        </div>

        <% if (exportFiles.length === 0) { %>
          <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #dee2e6;"></i>
            <h4 class="mt-3 text-muted">Hali hech qanday natija yo'q</h4>
            <p class="text-muted">Eski xabarlarni skanerlashni boshlang!</p>
            <a href="/history" class="btn btn-primary mt-2">
              <i class="bi bi-play-fill"></i> Skanerlashni boshlash
            </a>
          </div>
        <% } else { %>

          <!-- Umumiy statistika -->
          <div class="summary-card mb-4">
            <div class="row">
              <div class="col-md-4 summary-stat">
                <h2><%= exportFiles.length %></h2>
                <p><i class="bi bi-file-earmark-text"></i> Export Fayllar</p>
              </div>
              <div class="col-md-4 summary-stat border-start border-end">
                <h2><%= exportFiles.reduce((sum, f) => sum + f.totalPhones, 0).toLocaleString() %></h2>
                <p><i class="bi bi-telephone"></i> Jami Raqamlar</p>
              </div>
              <div class="col-md-4 summary-stat">
                <h2><%= exportFiles.reduce((sum, f) => sum + f.uniquePhones, 0).toLocaleString() %></h2>
                <p><i class="bi bi-star"></i> Unikal Raqamlar</p>
              </div>
            </div>
          </div>

          <!-- Export fayllar -->
          <h5 class="mb-3"><i class="bi bi-folder"></i> Saqlangan Fayllar</h5>
          <div class="row">
            <% exportFiles.forEach((file, index) => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="export-card">
                  <div class="export-header">
                    <div class="d-flex justify-content-between align-items-start">
                      <div>
                        <%
                          // Fayl nomini ajratish
                          const fileName = file.name.replace('history_scrape_', '').replace('.json', '');
                          const isCustomName = !fileName.match(/^\d{4}-\d{2}-\d{2}$/);
                          const displayName = isCustomName ? fileName.replace(/_\d{4}-\d{2}-\d{2}$/, '').replace(/_/g, ' ') : `Export #${index + 1}`;
                        %>
                        <h6 class="mb-1">
                          <i class="bi bi-<%= isCustomName ? 'tag' : 'file-earmark-zip' %>"></i>
                          <%= displayName %>
                        </h6>
                        <span class="badge-date">
                          <i class="bi bi-calendar3"></i>
                          <%= new Date(file.created).toLocaleDateString('uz-UZ') %>
                        </span>
                      </div>
                      <span class="badge bg-white text-dark"><%= file.size %> KB</span>
                    </div>
                  </div>

                  <div class="card-body">
                    <div class="row g-2 mb-3">
                      <div class="col-6">
                        <div class="stat-box">
                          <p class="stat-number"><%= file.totalPhones.toLocaleString() %></p>
                          <small class="text-muted">Jami</small>
                        </div>
                      </div>
                      <div class="col-6">
                        <div class="stat-box">
                          <p class="stat-number"><%= file.uniquePhones.toLocaleString() %></p>
                          <small class="text-muted">Unikal</small>
                        </div>
                      </div>
                    </div>

                    <div class="d-grid gap-2">
                      <a href="/history/download/<%= file.name.replace('.json', '.xlsx') %>" class="btn btn-primary download-btn">
                        <i class="bi bi-file-earmark-excel"></i> Excel
                      </a>
                      <a href="/history/download/<%= file.txtFile %>" class="btn btn-success download-btn">
                        <i class="bi bi-download"></i> TXT
                      </a>
                      <a href="/history/download/<%= file.name %>" class="btn btn-outline-secondary download-btn">
                        <i class="bi bi-file-code"></i> JSON
                      </a>
                      <button onclick="deleteFile('<%= file.name %>')" class="btn btn-danger download-btn">
                        <i class="bi bi-trash"></i> O'chirish
                      </button>
                    </div>

                    <div class="mt-3 text-center">
                      <small class="text-muted">
                        <i class="bi bi-clock"></i>
                        <%= new Date(file.created).toLocaleTimeString('uz-UZ', { hour: '2-digit', minute: '2-digit' }) %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    async function deleteFile(filename) {
      if (!confirm('Haqiqatan ham bu faylni o\'chirmoqchimisiz?\n\n' + filename)) {
        return;
      }

      try {
        const response = await fetch('/history/delete/' + filename, {
          method: 'DELETE'
        });

        const result = await response.json();

        if (result.success) {
          alert('✅ Fayl o\'chirildi!');
          window.location.reload();
        } else {
          alert('❌ Xato: ' + result.error);
        }
      } catch (error) {
        alert('❌ Xato: ' + error.message);
      }
    }
  </script>
</body>
</html>
