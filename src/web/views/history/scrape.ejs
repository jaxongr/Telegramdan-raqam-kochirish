<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eski xabarlarni skanerlash - Telegram SMS Tizim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      background: #212529;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 0.8rem 1rem;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #fff;
      background: #343a40;
    }
    .group-checkbox {
      padding: 10px;
      border: 1px solid #dee2e6;
      border-radius: 5px;
      margin-bottom: 10px;
    }
    .group-checkbox:hover {
      background: #f8f9fa;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h5 class="text-white px-3 mb-3">
            <i class="bi bi-telegram"></i> Telegram SMS
          </h5>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-speedometer2"></i> Bosh sahifa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">
                <i class="bi bi-collection"></i> Guruhlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/phones">
                <i class="bi bi-telephone"></i> Telefon raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sms">
                <i class="bi bi-chat-dots"></i> SMS loglar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/semysms">
                <i class="bi bi-sim"></i> SemySMS raqamlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/history">
                <i class="bi bi-clock-history"></i> Eski xabarlar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history/results">
                <i class="bi bi-archive"></i> Arxiv natijalar
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">
                <i class="bi bi-gear"></i> Sozlamalar
              </a>
            </li>
          </ul>
          <hr class="text-white">
          <div class="px-3">
            <small class="text-muted">Foydalanuvchi: <%= username %></small><br>
            <a href="/logout" class="btn btn-sm btn-outline-light mt-2">
              <i class="bi bi-box-arrow-right"></i> Chiqish
            </a>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-10 ms-sm-auto px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Eski xabarlarni skanerlash</h1>
        </div>

        <% if (error) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <% if (result) { %>
          <div class="alert alert-success">
            <h5><i class="bi bi-check-circle"></i> Skanerlash tugadi!</h5>
            <hr>
            <% if (result.totalGroups) { %>
              <p><strong>Guruhlar soni:</strong> <%= result.totalGroups %></p>
            <% } else { %>
              <p><strong>Guruh:</strong> <%= result.groupName %></p>
              <p><strong>Tekshirilgan xabarlar:</strong> <%= result.totalMessages %></p>
              <p><strong>Telefon topilgan xabarlar:</strong> <%= result.messagesWithPhones %></p>
            <% } %>
            <p><strong>Topilgan raqamlar:</strong> <%= result.fileInfo.totalPhones %></p>
            <p><strong>Unikal raqamlar:</strong> <%= result.fileInfo.uniquePhones %></p>
            <hr>
            <p class="mb-0">
              <i class="bi bi-file-earmark-text"></i> Natijalar saqlandi:<br>
              <code>exports/<%= result.fileInfo.jsonFile %></code><br>
              <code>exports/<%= result.fileInfo.txtFile %></code>
            </p>
          </div>
        <% } %>

        <div class="alert alert-info">
          <i class="bi bi-info-circle"></i>
          Bu sahifa orqali siz guruhlardagi eski xabarlarni skanerlashingiz va telefon raqamlarni olishingiz mumkin.
          Natijalar <code>exports/</code> papkasida saqlanadi.
        </div>

        <!-- Sana bo'yicha skanerlash -->
        <div class="card mb-3">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-range"></i> Sana bo'yicha skanerlash (Tavsiya etiladi)</h5>
          </div>
          <div class="card-body">
            <form id="scrapeDateForm">
              <div class="row">
                <div class="col-md-12 mb-3">
                  <label class="form-label">
                    <i class="bi bi-collection"></i> Guruhlarni tanlang
                    <button type="button" class="btn btn-sm btn-outline-primary ms-2" onclick="toggleAllGroups()">
                      <i class="bi bi-check-all"></i> Hammasini tanlash
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="clearAllGroups()">
                      <i class="bi bi-x"></i> Tozalash
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-info" onclick="checkDateRanges()">
                      <i class="bi bi-calendar-check"></i> Sana oralig'ini tekshirish
                    </button>
                  </label>

                  <!-- Sana oralig'i natijasi -->
                  <div id="dateRangeResults" class="mb-3" style="display: none;">
                    <div class="alert alert-info">
                      <h6><i class="bi bi-info-circle"></i> Mavjud xabarlar sana oralig'i:</h6>
                      <div id="dateRangeContent"></div>
                    </div>
                  </div>
                  <div class="row">
                    <% if (groups && groups.length > 0) { %>
                      <% groups.forEach(group => { %>
                        <div class="col-md-4 col-lg-3">
                          <div class="group-checkbox">
                            <div class="form-check">
                              <input class="form-check-input group-check" type="checkbox" name="group_ids[]" value="<%= group.id %>" id="group_<%= group.id %>">
                              <label class="form-check-label" for="group_<%= group.id %>">
                                <small><%= group.name %></small>
                              </label>
                            </div>
                          </div>
                        </div>
                      <% }) %>
                    <% } else { %>
                      <div class="col-12">
                        <div class="alert alert-warning">Guruhlar yo'q - avval /groups dan qo'shing</div>
                      </div>
                    <% } %>
                  </div>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Boshlang'ich sana</label>
                  <input type="date" name="start_date" class="form-control" required>
                  <small class="text-muted">Qaysi sanadan boshlab</small>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Tugash sana (ixtiyoriy)</label>
                  <input type="date" name="end_date" class="form-control">
                  <small class="text-muted">Bo'sh qoldirilsa - bugungi kun</small>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Fayl nomi (ixtiyoriy)</label>
                  <input type="text" name="export_name" class="form-control" placeholder="Logistika_2025" maxlength="50">
                  <small class="text-muted">Arxivni ajratish uchun</small>
                </div>
              </div>
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-play-fill"></i> Skanerlashni boshlash
              </button>
            </form>

            <!-- Progress display -->
            <div id="progressContainer" style="display: none;" class="mt-4">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">
                  <span id="statusText">Skanerlash davom etmoqda...</span>
                </h6>
                <div>
                  <button id="pauseBtn" class="btn btn-sm btn-warning" onclick="pauseScraping()">
                    <i class="bi bi-pause-fill"></i> Pauza
                  </button>
                  <button id="resumeBtn" class="btn btn-sm btn-success" onclick="resumeScraping()" style="display: none;">
                    <i class="bi bi-play-fill"></i> Davom ettirish
                  </button>
                  <button id="stopBtn" class="btn btn-sm btn-danger" onclick="stopScraping()">
                    <i class="bi bi-stop-fill"></i> To'xtatish
                  </button>
                </div>
              </div>
              <!-- Kunlar progress bar -->
              <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <small class="text-muted">Kunlar progress:</small>
                  <small class="text-muted">
                    <strong id="processedDays">0</strong> / <strong id="totalDays">0</strong> kun
                  </small>
                </div>
                <div class="progress" style="height: 20px;">
                  <div id="daysProgressBar" class="progress-bar bg-info" role="progressbar" style="width: 0%">0%</div>
                </div>
                <small class="text-muted">
                  Hozirgi sana: <strong id="currentDateText">-</strong>
                </small>
              </div>

              <!-- Xabarlar progress bar -->
              <div class="mb-2">
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <small class="text-muted">Xabarlar progress:</small>
                </div>
                <div class="progress" style="height: 25px;">
                  <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%">0%</div>
                </div>
              </div>

              <div class="row text-center">
                <div class="col-md-2">
                  <strong id="processedCount">0</strong> xabar qayta ishlandi
                </div>
                <div class="col-md-2">
                  <strong id="phonesCount">0</strong> raqam topildi
                </div>
                <div class="col-md-2">
                  <strong id="uniquePhonesCount">0</strong> unikal raqam
                </div>
                <div class="col-md-2">
                  <strong id="speedCount">0</strong> xabar/min
                </div>
                <div class="col-md-2">
                  <strong id="elapsedTime">0 min</strong> ishladi
                </div>
                <div class="col-md-2">
                  <strong id="timeLeft">-</strong> qoldi
                </div>
              </div>
            </div>

            <!-- Navbat ro'yxati -->
            <div id="queueContainer" class="mt-4" style="display: none;">
              <h6 class="mb-3"><i class="bi bi-list-ol"></i> Navbat ro'yxati</h6>
              <div class="table-responsive">
                <table class="table table-sm table-bordered">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 5%">#</th>
                      <th style="width: 40%">Nom</th>
                      <th style="width: 20%">Holat</th>
                      <th style="width: 20%">Qo'shilgan vaqt</th>
                      <th style="width: 15%">Amal</th>
                    </tr>
                  </thead>
                  <tbody id="queueTableBody">
                    <!-- JavaScript orqali to'ldiriladi -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- ⚡ TEZ SKAN -->
        <div class="card mb-3">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-lightning-charge-fill"></i> ⚡ TEZ SKAN - Har userdan 1-2 ta raqam (5x tezroq!)</h5>
          </div>
          <div class="card-body">
            <div class="alert alert-info mb-3">
              <i class="bi bi-info-circle"></i>
              <strong>TEZ SKAN nima?</strong> Har bir userdan faqat 1-2 ta raqam oladi. Bir userning 100 ta xabari bo'lsa ham, faqat 1-2 ta raqam olinadi va keyingi xabarlari skip qilinadi. Natijada 5-10x tezroq ishlaydi!
            </div>
            <form id="uniqueScanForm">
              <div class="row">
                <div class="col-md-4 mb-3">
                  <label class="form-label">
                    <i class="bi bi-collection"></i> Guruhni tanlang
                  </label>
                  <select name="group_id" class="form-select" required>
                    <option value="">-- Guruhni tanlang --</option>
                    <% if (groups && groups.length > 0) { %>
                      <% groups.forEach(group => { %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                      <% }) %>
                    <% } %>
                  </select>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Boshlang'ich sana</label>
                  <input type="date" name="start_date" class="form-control" required>
                  <small class="text-muted">Qaysi sanadan boshlab</small>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Tugash sana</label>
                  <input type="date" name="end_date" class="form-control">
                  <small class="text-muted">Bo'sh qoldirilsa - bugungi kun</small>
                </div>
                <div class="col-md-2 mb-3">
                  <label class="form-label">Max raqam/user</label>
                  <select name="max_phones_per_user" class="form-select">
                    <option value="1">1 ta</option>
                    <option value="2">2 ta</option>
                  </select>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">Fayl nomi (ixtiyoriy)</label>
                  <input type="text" name="export_name" class="form-control" placeholder="Tez_skan_2025" maxlength="50">
                  <small class="text-muted">Arxivni ajratish uchun</small>
                </div>
              </div>
              <button type="submit" class="btn btn-warning btn-lg">
                <i class="bi bi-lightning-charge-fill"></i> ⚡ TEZ SKAN boshlash
              </button>
            </form>

            <!-- Progress display for TEZ SKAN -->
            <div id="uniqueProgressContainer" style="display: none;" class="mt-4">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">
                  <i class="bi bi-lightning-charge-fill"></i>
                  <span id="uniqueStatusText">⚡ TEZ SKAN davom etmoqda...</span>
                </h6>
                <div>
                  <button id="uniqueStopBtn" class="btn btn-sm btn-danger" onclick="stopUniqueScan()">
                    <i class="bi bi-stop-fill"></i> To'xtatish
                  </button>
                </div>
              </div>

              <!-- Progress bar -->
              <div class="mb-2">
                <div class="progress" style="height: 25px;">
                  <div id="uniqueProgressBar" class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: 0%">0%</div>
                </div>
              </div>

              <div class="row text-center">
                <div class="col-md-2">
                  <strong id="uniqueTotalMessages">0</strong> jami xabar
                </div>
                <div class="col-md-2">
                  <strong id="uniqueProcessedCount">0</strong> tekshirildi
                </div>
                <div class="col-md-2">
                  <strong id="uniqueUsersCount">0</strong> user
                </div>
                <div class="col-md-2">
                  <strong id="uniquePhonesCount">0</strong> raqam
                </div>
                <div class="col-md-2">
                  <strong id="uniqueUniquePhonesCount">0</strong> unikal
                </div>
                <div class="col-md-2">
                  <strong id="uniqueSpeedCount">0</strong> msg/min
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Ko'p guruhlar -->
        <div class="card">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-collection"></i> Bir nechta guruhni skanerlash</h5>
          </div>
          <div class="card-body">
            <form method="POST" action="/history/scrape-multiple">
              <div class="mb-3">
                <label class="form-label">Guruhlarni tanlang (10 tagacha tavsiya etiladi)</label>
                <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                  <% if (groups && groups.length > 0) { %>
                    <% groups.forEach(group => { %>
                      <div class="form-check group-checkbox">
                        <input class="form-check-input" type="checkbox" name="group_ids" value="<%= group.id %>" id="group_<%= group.id %>">
                        <label class="form-check-label" for="group_<%= group.id %>">
                          <strong><%= group.name %></strong>
                          <% if (group.keywords) { %>
                            <br><small class="text-muted">Kalit so'zlar: <%= group.keywords %></small>
                          <% } %>
                        </label>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <div class="alert alert-warning">
                      Guruhlar yo'q. Avval <a href="/groups/add">guruh qo'shing</a>.
                    </div>
                  <% } %>
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label">Nechta xabarni tekshirish</label>
                <select name="message_limit" class="form-select">
                  <option value="100">100 ta xabar</option>
                  <option value="500">500 ta xabar</option>
                  <option value="1000">1000 ta xabar</option>
                  <option value="2000">2000 ta xabar</option>
                  <option value="5000">5000 ta xabar</option>
                </select>
                <small class="text-muted">Diqqat: Ko'p guruh va ko'p xabar = uzoq vaqt ketadi!</small>
              </div>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-play-fill"></i> Barcha tanlangan guruhlarni skanerlash
              </button>
            </form>
          </div>
        </div>

        <div class="alert alert-warning mt-3">
          <i class="bi bi-exclamation-triangle"></i>
          <strong>Diqqat:</strong> Telegram API limitlariga rioya qiling. Ko'p guruh va ko'p xabarni bir vaqtda skanerlash
          Telegram tomonidan bloklashga olib kelishi mumkin. Tavsiya: 5-10 guruhni 100-500 xabar bilan boshlang.
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let progressInterval = null;

    // Checkbox boshqaruvi
    function toggleAllGroups() {
      const checkboxes = document.querySelectorAll('.group-check');
      const allChecked = Array.from(checkboxes).every(cb => cb.checked);
      checkboxes.forEach(cb => cb.checked = !allChecked);
    }

    function clearAllGroups() {
      document.querySelectorAll('.group-check').forEach(cb => cb.checked = false);
    }

    // Sana oralig'ini tekshirish
    async function checkDateRanges() {
      const checkboxes = document.querySelectorAll('.group-check:checked');

      if (checkboxes.length === 0) {
        alert('⚠️ Avval guruhlarni tanlang!');
        return;
      }

      const resultDiv = document.getElementById('dateRangeContent');
      resultDiv.innerHTML = '<div class="text-center"><div class="spinner-border spinner-border-sm" role="status"></div> Tekshirilmoqda...</div>';
      document.getElementById('dateRangeResults').style.display = 'block';

      let html = '<table class="table table-sm table-bordered mb-0"><thead><tr><th>Guruh nomi</th><th>Jami xabarlar</th><th>Eng eski xabar</th><th>Eng yangi xabar</th></tr></thead><tbody>';

      for (const checkbox of checkboxes) {
        const groupId = checkbox.value;
        const groupName = checkbox.nextElementSibling.textContent.trim();

        try {
          const response = await fetch(`/history/api/check-range/${groupId}`);
          const result = await response.json();

          if (result.success) {
            const totalMsg = result.totalMessages ? `<span class="badge bg-info">${result.totalMessages.toLocaleString()}</span>` : '<span class="text-muted">-</span>';
            html += `<tr>
              <td><strong>${groupName}</strong></td>
              <td>${totalMsg}</td>
              <td>${result.oldestDateFormatted}</td>
              <td>${result.newestDateFormatted}</td>
            </tr>`;
          } else {
            html += `<tr>
              <td><strong>${groupName}</strong></td>
              <td colspan="3" class="text-danger">Xato: ${result.error}</td>
            </tr>`;
          }
        } catch (error) {
          html += `<tr>
            <td><strong>${groupName}</strong></td>
            <td colspan="3" class="text-danger">Xato: ${error.message}</td>
          </tr>`;
        }
      }

      html += '</tbody></table>';
      resultDiv.innerHTML = html;
    }

    // Navbatdan taskni o'chirish
    async function removeTask(taskId, taskName) {
      if (!confirm(`"${taskName}" taskni navbatdan o'chirmoqchimisiz?`)) {
        return;
      }

      try {
        const response = await fetch(`/history/queue/${taskId}`, {
          method: 'DELETE'
        });

        const result = await response.json();

        if (result.success) {
          alert('✅ ' + result.message);
          updateProgress(); // Navbatni yangilash
        } else {
          alert('❌ ' + result.message);
        }
      } catch (error) {
        alert('❌ Xato: ' + error.message);
      }
    }

    // Navbat ro'yxatini yangilash
    function updateQueueList(queueData) {
      const queueContainer = document.getElementById('queueContainer');
      const queueTableBody = document.getElementById('queueTableBody');

      if (!queueData || !queueData.pendingTasks || queueData.pendingTasks.length === 0) {
        queueContainer.style.display = 'none';
        return;
      }

      queueContainer.style.display = 'block';

      let html = '';
      queueData.pendingTasks.forEach((task, index) => {
        const statusBadge = task.position === 1 && queueData.isProcessing
          ? '<span class="badge bg-success">Bajarilmoqda</span>'
          : '<span class="badge bg-secondary">Navbatda</span>';

        const deleteBtn = task.position === 1 && queueData.isProcessing
          ? '<button class="btn btn-sm btn-secondary" disabled>Ishlamoqda</button>'
          : `<button class="btn btn-sm btn-danger" onclick="removeTask('${task.id}', '${task.name}')">
               <i class="bi bi-trash"></i> O'chirish
             </button>`;

        html += `
          <tr>
            <td>${task.position}</td>
            <td><strong>${task.name}</strong></td>
            <td>${statusBadge}</td>
            <td><small>${task.addedAt}</small></td>
            <td>${deleteBtn}</td>
          </tr>
        `;
      });

      queueTableBody.innerHTML = html;
    }

    // Stop/Pause/Resume funksiyalari
    async function stopScraping() {
      if (!confirm('Skanerlashni to\'xtatmoqchimisiz? Jarayon bekor qilinadi.')) return;

      const response = await fetch('/history/stop', { method: 'POST' });
      const result = await response.json();

      if (result.success) {
        document.getElementById('statusText').textContent = '⏹️ To\'xtatilmoqda...';
        document.getElementById('stopBtn').disabled = true;
        document.getElementById('pauseBtn').disabled = true;
      }
    }

    async function pauseScraping() {
      const response = await fetch('/history/pause', { method: 'POST' });
      const result = await response.json();

      if (result.success) {
        document.getElementById('pauseBtn').style.display = 'none';
        document.getElementById('resumeBtn').style.display = 'inline-block';
        document.getElementById('statusText').textContent = '⏸️ Pauza qilindi';
        document.getElementById('progressBar').classList.remove('progress-bar-animated');
      }
    }

    async function resumeScraping() {
      const response = await fetch('/history/resume', { method: 'POST' });
      const result = await response.json();

      if (result.success) {
        document.getElementById('pauseBtn').style.display = 'inline-block';
        document.getElementById('resumeBtn').style.display = 'none';
        document.getElementById('statusText').textContent = '▶️ Davom etmoqda...';
        document.getElementById('progressBar').classList.add('progress-bar-animated');
      }
    }

    // Progress ni yangilash funksiyasi
    async function updateProgress() {
      try {
        const progressRes = await fetch('/history/api/progress');
        const progress = await progressRes.json();

        // Navbat ro'yxatini yangilash (doim)
        if (progress.queue) {
          updateQueueList(progress.queue);
        }

        if (!progress.isRunning) {
          if (progressInterval) {
            clearInterval(progressInterval);
            progressInterval = null;
          }
          localStorage.removeItem('history_scraping');
          document.getElementById('progressContainer').style.display = 'none';
          alert('Skanerlash tugadi! Natijalar exports/ papkasida.');
          location.reload();
          return;
        }

        // Progress display ko'rsatish
        document.getElementById('progressContainer').style.display = 'block';

        // Pause/Resume holati
        if (progress.isPaused) {
          document.getElementById('pauseBtn').style.display = 'none';
          document.getElementById('resumeBtn').style.display = 'inline-block';
          document.getElementById('statusText').textContent = '⏸️ Pauza qilindi';
          document.getElementById('progressBar').classList.remove('progress-bar-animated');
        } else {
          document.getElementById('pauseBtn').style.display = 'inline-block';
          document.getElementById('resumeBtn').style.display = 'none';
          document.getElementById('statusText').textContent = '▶️ Skanerlash davom etmoqda...';
          document.getElementById('progressBar').classList.add('progress-bar-animated');
        }

        // Kunlar progress bar yangilash
        if (progress.totalDays && progress.totalDays > 0) {
          const daysPercent = Math.round((progress.processedDays / progress.totalDays) * 100);
          document.getElementById('daysProgressBar').style.width = daysPercent + '%';
          document.getElementById('daysProgressBar').textContent = daysPercent + '%';
          document.getElementById('processedDays').textContent = progress.processedDays;
          document.getElementById('totalDays').textContent = progress.totalDays;

          // Hozirgi sanani ko'rsatish
          if (progress.currentDate) {
            const currentDate = new Date(progress.currentDate);
            document.getElementById('currentDateText').textContent = currentDate.toLocaleDateString('uz-UZ');
          }
        }

        // Xabarlar progress bar yangilash
        const percent = progress.totalMessages > 0
          ? Math.round((progress.processedMessages / progress.totalMessages) * 100)
          : 0;

        document.getElementById('progressBar').style.width = percent + '%';
        document.getElementById('progressBar').textContent = percent + '%';

        document.getElementById('processedCount').textContent = progress.processedMessages;
        document.getElementById('phonesCount').textContent = progress.phonesFound;
        document.getElementById('uniquePhonesCount').textContent = progress.uniquePhones || 0;
        document.getElementById('speedCount').textContent = progress.messagesPerMinute;

        // O'tgan vaqtni hisoblash
        if (progress.startTime) {
          const elapsedMs = Date.now() - progress.startTime;
          const elapsedMin = Math.floor(elapsedMs / 60000);
          const elapsedSec = Math.floor((elapsedMs % 60000) / 1000);

          if (elapsedMin > 0) {
            document.getElementById('elapsedTime').textContent = `${elapsedMin} min ${elapsedSec} s`;
          } else {
            document.getElementById('elapsedTime').textContent = `${elapsedSec} s`;
          }
        }

        if (progress.estimatedTimeLeft > 0) {
          document.getElementById('timeLeft').textContent = progress.estimatedTimeLeft + ' min';
        } else {
          document.getElementById('timeLeft').textContent = '-';
        }
      } catch (error) {
        console.error('Progress yangilanishda xato:', error);
      }
    }

    // Sahifa yuklanganda - DOIM tekshirish
    window.addEventListener('DOMContentLoaded', async () => {
      try {
        // API orqali tekshirish
        const progressRes = await fetch('/history/api/progress');
        const progress = await progressRes.json();

        // Navbatni doim ko'rsatish (agar bor bo'lsa)
        if (progress.queue) {
          updateQueueList(progress.queue);
        }

        if (progress.isRunning) {
          // Progress ni ko'rsatish
          localStorage.setItem('history_scraping', 'true');
          updateProgress();
          progressInterval = setInterval(updateProgress, 2000);
        } else {
          localStorage.removeItem('history_scraping');
        }
      } catch (error) {
        console.error('Progress tekshirishda xato:', error);
      }
    });

    // Sana bo'yicha skanerlash
    document.getElementById('scrapeDateForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = new FormData(this);

      // Tanlangan guruhlarni olish
      const selectedGroups = formData.getAll('group_ids[]');

      const data = {
        group_ids: selectedGroups,
        start_date: formData.get('start_date'),
        end_date: formData.get('end_date'),
        export_name: formData.get('export_name') || ''
      };

      try {
        const response = await fetch('/history/scrape-by-date', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          // localStorage ga yozish - skanerlash boshlandi
          localStorage.setItem('history_scraping', 'true');

          // Navbat xabari ko'rsatish
          if (result.message) {
            alert('✅ ' + result.message);
          }

          // Progress ni boshlash
          updateProgress();
          progressInterval = setInterval(updateProgress, 2000);

        } else {
          alert('Xato: ' + result.error);
        }
      } catch (error) {
        alert('Xato: ' + error.message);
      }
    });

    // ⚡ TEZ SKAN form submit
    let uniqueProgressInterval = null;

    document.getElementById('uniqueScanForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = new FormData(this);

      const data = {
        group_id: formData.get('group_id'),
        start_date: formData.get('start_date'),
        end_date: formData.get('end_date'),
        max_phones_per_user: formData.get('max_phones_per_user'),
        export_name: formData.get('export_name') || ''
      };

      try {
        const response = await fetch('/history/scrape-unique', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          alert('✅ ' + result.message);

          // Progress ni boshlash
          localStorage.setItem('unique_scraping', 'true');
          updateUniqueProgress();
          uniqueProgressInterval = setInterval(updateUniqueProgress, 2000);

        } else {
          alert('Xato: ' + result.error);
        }
      } catch (error) {
        alert('Xato: ' + error.message);
      }
    });

    // TEZ SKAN progress ni yangilash
    async function updateUniqueProgress() {
      try {
        const response = await fetch('/history/api/unique-progress');
        const progress = await response.json();

        if (!progress.isRunning) {
          if (uniqueProgressInterval) {
            clearInterval(uniqueProgressInterval);
            uniqueProgressInterval = null;
          }
          localStorage.removeItem('unique_scraping');
          document.getElementById('uniqueProgressContainer').style.display = 'none';

          // Agar raqamlar topilgan bo'lsa
          if (progress.phonesFound > 0) {
            alert(`✅ TEZ SKAN tugadi! ${progress.phonesFound} ta raqam topildi.`);
            location.reload();
          }
          return;
        }

        // Progress container ni ko'rsatish
        document.getElementById('uniqueProgressContainer').style.display = 'block';

        // Progress bar yangilash
        const percent = progress.totalMessages > 0
          ? Math.round((progress.processedMessages / progress.totalMessages) * 100)
          : 0;

        document.getElementById('uniqueProgressBar').style.width = percent + '%';
        document.getElementById('uniqueProgressBar').textContent = percent + '%';

        // Statistika
        document.getElementById('uniqueTotalMessages').textContent = progress.totalMessages || 0;
        document.getElementById('uniqueProcessedCount').textContent = progress.processedMessages || 0;
        document.getElementById('uniqueUsersCount').textContent = progress.uniqueUsers || 0;
        document.getElementById('uniquePhonesCount').textContent = progress.phonesFound || 0;
        document.getElementById('uniqueUniquePhonesCount').textContent = progress.uniquePhones || 0;
        document.getElementById('uniqueSpeedCount').textContent = progress.messagesPerMinute || 0;

        // Status text
        if (progress.groupName) {
          document.getElementById('uniqueStatusText').textContent = `⚡ TEZ SKAN - ${progress.groupName}`;
        }

      } catch (error) {
        console.error('TEZ SKAN progress xato:', error);
      }
    }

    // TEZ SKAN to'xtatish
    function stopUniqueScan() {
      if (!confirm('⚡ TEZ SKAN ni to\'xtatmoqchimisiz?')) {
        return;
      }

      if (uniqueProgressInterval) {
        clearInterval(uniqueProgressInterval);
        uniqueProgressInterval = null;
      }

      localStorage.removeItem('unique_scraping');
      document.getElementById('uniqueProgressContainer').style.display = 'none';
      alert('⚡ TEZ SKAN to\'xtatildi');
      location.reload();
    }

    // Sahifa yuklanganda TEZ SKAN tekshirish
    window.addEventListener('DOMContentLoaded', async () => {
      try {
        // TEZ SKAN progressni tekshirish
        if (localStorage.getItem('unique_scraping') === 'true') {
          const response = await fetch('/history/api/unique-progress');
          const progress = await response.json();

          if (progress.isRunning) {
            updateUniqueProgress();
            uniqueProgressInterval = setInterval(updateUniqueProgress, 2000);
          } else {
            localStorage.removeItem('unique_scraping');
          }
        }
      } catch (error) {
        console.error('TEZ SKAN progress tekshirishda xato:', error);
      }
    });
  </script>
