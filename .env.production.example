# ===============================================
# MODE SOZLAMASI
# ===============================================
# server  = Telegram client va SMS ishlaydi (serverda ishlatiladi)
# local   = Faqat web dashboard (lokal kompyuterda)
# demo    = Demo rejim (test uchun)
MODE=server

# ===============================================
# TELEGRAM API SOZLAMALARI
# ===============================================
# https://my.telegram.org dan oling
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+998901234567
TELEGRAM_SESSION=

# ===============================================
# SEMYSMS API SOZLAMALARI
# ===============================================
# https://semysms.net dan API key oling
SEMYSMS_API_KEY=your_semysms_api_key_here
SEMYSMS_SYNC_INTERVAL_MINUTES=5

# ===============================================
# WEB DASHBOARD
# ===============================================
WEB_PORT=3000
WEB_USERNAME=admin
WEB_PASSWORD=admin123
SESSION_SECRET=your_random_secret_key_here

# ===============================================
# SMS SETTINGS
# ===============================================
SMS_DAILY_LIMIT_PER_NUMBER=1000000
SMS_DELAY_SECONDS=1
SMS_COOLDOWN_HOURS=5

# Smart Rotation (har bir qurilma navbatda kutadi)
PHONE_ROTATION_DELAY_SECONDS=80

# Random Delay (human-like pattern)
RANDOM_DELAY_MIN_SECONDS=8
RANDOM_DELAY_MAX_SECONDS=12

# Random Rest (dam olish)
REST_AFTER_SMS_MIN=10
REST_AFTER_SMS_MAX=15
REST_DURATION_MIN_SECONDS=60
REST_DURATION_MAX_SECONDS=180

# ===============================================
# MUTUAL SMS (O'zaro gaplashish)
# ===============================================
MUTUAL_SMS_ENABLED=true
MUTUAL_SMS_INTERVAL_MIN_MINUTES=60
MUTUAL_SMS_INTERVAL_MAX_MINUTES=120
MUTUAL_SMS_DAILY_LIMIT=100

# ===============================================
# LOGISTICS BOT (Ixtiyoriy)
# ===============================================
LOGISTICS_BOT_TOKEN=
LOGISTICS_TARGET_GROUP_ID=
LOGISTICS_ADMIN_IDS=

# ===============================================
# SYSTEM
# ===============================================
NODE_ENV=production
LOG_LEVEL=info
TIMEZONE=Asia/Tashkent
