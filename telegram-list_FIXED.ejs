<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Telegram Guruhlar - Telegram SMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        body { background: #f5f7fa; }
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            transition: all 0.3s;
            padding: 12px 20px;
            border-radius: 8px;
            margin: 5px 10px;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            color: white;
            background: rgba(255,255,255,0.15);
        }
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 25px;
        }
        .table-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <div class="px-3 mb-4 text-center">
                        <h5><i class="bi bi-telegram"></i> SMS Tizim</h5>
                        <small>Salom, <%= username %>!</small>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/groups">
                                <i class="bi bi-collection"></i> Guruhlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/routes">
                                <i class="bi bi-signpost-2"></i> Yo'nalishlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/history">
                                <i class="bi bi-clock-history"></i> Tarix
                            </a>
                        </li>
                    </ul>
                    <hr class="text-white-50 my-4">
                    <div class="px-3">
                        <a href="/logout" class="btn btn-outline-light btn-sm w-100">
                            <i class="bi bi-box-arrow-right"></i> Chiqish
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 px-4 py-3">
                <!-- Header -->
                <div class="page-header">
                    <h2><i class="bi bi-telegram"></i> Telegram Guruhlar Ro'yxati</h2>
                    <p class="mb-0 opacity-75">Telegramda a'zo bo'lgan barcha guruhlar va kanallar</p>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>

                <% if (telegramGroups.length === 0 && !error) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Telegram guruhlar topilmadi
                    </div>
                <% } else { %>
                    <div class="table-card mb-4">
                        <div class="card-header bg-white border-0 p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-list-ul text-primary"></i>
                                    <strong>Barcha guruhlar (<%= telegramGroups.length %>)</strong>
                                </div>
                                <span class="badge bg-success"><%= monitoredIds.length %> kuzatilmoqda</span>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Guruh nomi</th>
                                        <th>ID</th>
                                        <th>Username</th>
                                        <th>A'zolar</th>
                                        <th>Holat</th>
                                        <th>Amallar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% telegramGroups.forEach(group => { %>
                                        <tr>
                                            <td>
                                                <strong><%= group.title %></strong>
                                            </td>
                                            <td>
                                                <code class="small"><%= group.id %></code>
                                            </td>
                                            <td>
                                                <% if (group.username) { %>
                                                    <span class="badge bg-info">@<%= group.username %></span>
                                                <% } else { %>
                                                    <span class="text-muted">-</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary"><%= group.participantsCount.toLocaleString() %></span>
                                            </td>
                                            <td>
                                                <% if (group.isMonitored) { %>
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Kuzatilmoqda
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-dash-circle"></i> Kuzatilmaydi
                                                    </span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (!group.isMonitored) { %>
                                                    <button class="btn btn-sm btn-primary" onclick="addToMonitoring('<%= group.id %>', '<%= group.title.replace(/'/g, "\\'") %>')">
                                                        <i class="bi bi-plus-circle"></i> Qo'shish
                                                    </button>
                                                <% } else { %>
                                                    <span class="text-success small">
                                                        <i class="bi bi-check"></i> Qo'shilgan
                                                    </span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } %>

                <!-- Buttons -->
                <div class="d-flex gap-2 mb-4">
                    <a href="/groups" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Orqaga
                    </a>
                    <a href="/groups/add" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Qo'lda qo'shish
                    </a>
                    <button class="btn btn-success btn-lg" onclick="addAllToMonitoring()">
                        <i class="bi bi-plus-circle-fill"></i> Hammasini qo'shish
                    </button>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function addToMonitoring(telegramId, title) {
            if (confirm(`"${title}" guruhini monitoring'ga qo'shilsinmi?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/groups/add';

                const inputs = {
                    name: title,
                    telegram_id: telegramId,
                    keywords: '',
                    sms_template: 'Assalomu alaykum! Men {{group}} guruhida ko\'rdim...'
                };

                for (const [key, value] of Object.entries(inputs)) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = key;
                    input.value = value;
                    form.appendChild(input);
                }

                document.body.appendChild(form);
                form.submit();
            }
        }

        async function addAllToMonitoring() {
            if (!confirm('Barcha kuzatilmayotgan guruhlarni avtomatik qo\'shilsinmi?')) {
                return;
            }

            const btn = event.target;
            const originalHtml = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Jarayonda...';

            try {
                const response = await fetch('/groups/add-all-from-telegram', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                if (result.success) {
                    alert(`✅ Muvaffaqiyatli!\n\nJami guruhlar: ${result.stats.total}\nYangi qo'shilgan: ${result.stats.added}\nAllaqachon mavjud: ${result.stats.alreadyExists}\nAktivlashtirilgan: ${result.stats.activated}\nXatolar: ${result.stats.errors}`);
                    location.reload();
                } else {
                    alert(`❌ Xato: ${result.error}`);
                }
            } catch (error) {
                alert(`❌ Xato: ${error.message}`);
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalHtml;
            }
        }
    </script>
</body>
</html>
